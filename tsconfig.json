{
  "compilerOptions": {
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "noUncheckedIndexedAccess": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": ["./src/*"],
      "@env": ["./src/env.mjs"],
      "@server/*": ["./src/server/*"],
    }
  },
  "include": [".eslintrc.js", "next-env.d.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts", "./src/env.mjs"],
  "exclude": ["node_modules"]
}
